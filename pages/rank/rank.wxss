/* pages/rank/rank.wxss */

.rank-view{
  height: 100%;
}

.rank-left-view{
  width: 100px;
  text-align:center;
  height: 100%;
  overflow: auto; 
  float: left;
  position: absolute;
}

.rank-left-select{
  height: 50px;
  line-height: 50px;
  background-color: white;
}

.rank-left-no-select{
  height: 50px;
  line-height: 50px;
  background-color: #efeff7;
}

.rank-right-view{
  height: 100%;
  margin-left: 100px;
  overflow: auto; 
  float: left;
  position: absolute;
}

.rank-right-root{
   display: flex;
   flex-direction: "row";
   padding: 5px 10px 5px 10px;
}

.rank-right-child{
  flex: 2;
}

.rank-right-image{
  width: 144px; 
  height: 128px;
  flex: 1;
}

.rank-right-name{
  font-size: 15px;
  color: black;
  margin-left: 5px;
}

.rank-right-des{
  font-size: 12px;
  color: #9c9a9c;
  text-overflow: ellipsis;
  margin-left: 5px;
}

.rank-right-autor{
  font-size: 10px;
  color: #9c9a9c;
  margin-left: 5px;
}

.rank-right-tag1{
  font-size: 10px;
  color: #9c9a9c;
  padding: 1px;
  margin-right: 5px;
  border-top: 2px solid #cecfce;
  border-bottom: 2px solid #cecfce;
  border-left: 2px solid #cecfce;
  border-right: 2px solid #cecfce;
  position: relative;
  float: right;
}

.rank-right-tag2{
  font-size: 10px;
  color: #ff8608;
  padding: 1px;
  border-top: 2px solid #ff8608;
  border-bottom: 2px solid #ff8608;
  border-left: 2px solid #ff8608;
  border-right: 2px solid #ff8608;
  position: relative;
  float: right;
}

.rank-line{
  background-color: white;
  width: 100%;
  height: 2px;
}

::-webkit-scrollbar {
  display:none;
}